#създаваме червен материал

texture1 = TextureImage()
texture1.loadImage(basePath+"/debug.jpg")

brdf1 = DiffuseBRDF()
brdf1.filterTexture = texture1

brdf2 = DiffuseBRDF()
brdf2.filterColor = Color3(0, 1, 0)
shader1 = BRDFShader()
shader1.m_brdf = brdf2 

shader2 = BRDFShader()
shader2.m_brdf = brdf1

#създаваме сфера
sphere1 = Sphere()
sphere1.center = Vector3(0, 0, 1)
sphere1.radius = 1
sphere1.shader = shader2
#добавяме сферата в сцената
scene.addPrimitive(sphere1)

torus = Torus()
torus.innerRadius = 1
torus.outerRadius = 4
torus.shader = shader1
scene.addPrimitive(torus)

# Plane
plane = Plane()
plane.point = Vector3(0, 0, 0)
plane.normal = Vector3(1 ,0, 1)
plane.shader = shader1
scene.addPrimitive(plane)
